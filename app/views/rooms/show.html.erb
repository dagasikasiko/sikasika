<% content_for :sidebar do %>
  <% @users.each do |user| %>
    <%= link_to user,class: "list-group-item" do %>
      <strong><%= user.name %></strong>
      <span class="badge">5</span>
    <% end %>
  <% end %>
  <a href="#" id="anv" class="list-group-item active">test1</a>
<% end %>

<div class="chat-header">
  <p><strong>chat room</strong></p>
</div>

<div class="chat-main">
  <div id="messages">
      <%= render @messages %>
  </div>
</div>

<div class="chat-footer">
  <form>
    <input id="chat_input" type="text" data-behavior="room_speaker">
      <!-- <label>Say something:</label><br> -->
  </form>
</div>

<%= javascript_tag do %>
    $('#main').animate(
      {scrollTop:
        $('#main')[0].scrollHeight
      }, 0);
<% end %>
