  <body class = "login_body">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "出会い系", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '#' %></li>
            <li><%= link_to "Help",   '#' %></li>
            <li><%= link_to "Log in", '#' %></li>
          </ul>
        </nav>
      </div>
